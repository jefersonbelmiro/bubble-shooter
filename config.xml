<?xml version="1.0" encoding="UTF-8" ?>
<widget id="com.belmiro.bubbleshooter" version="0.0.26" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Bubble Shooter</name>
    <description>
        bubble shooter game
    </description>
    <author email="jeferson.belmiro@gmail.com" href="http://jefersonbelmiro.com.br">
        bubble shooter team
    </author>

    <content src="index.html" />

    <access origin="*" uri="*" subdomains="true" />

    <preference name="SplashScreen" value="splash.png"/>
    <preference name="SplashScreenDelay" value="10000"/>

    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <platform name="android">
        <preference name="orientation" value="portrait" />
    </platform>

    <icon src="icon.png" />
    <gap:splash src="splash.png" />

    <gap:plugin name="org.crosswalk.engine" version="1.3.0" />
    <gap:plugin name="org.apache.cordova.splashscreen" />

    <icon src="res/icon/android/icon-36-ldpi.png"   gap:platform="android" gap:qualifier="ldpi" />
    <icon src="res/icon/android/icon-48-mdpi.png"   gap:platform="android" gap:qualifier="mdpi" />
    <icon src="res/icon/android/icon-72-hdpi.png"   gap:platform="android" gap:qualifier="hdpi" />
    <icon src="res/icon/android/icon-96-xhdpi.png"  gap:platform="android" gap:qualifier="xhdpi" />

    <gap:splash src="res/screen/android/screen-ldpi-portrait.png"  gap:platform="android" gap:qualifier="ldpi" />
    <gap:splash src="res/screen/android/screen-mdpi-portrait.png"  gap:platform="android" gap:qualifier="mdpi" />
    <gap:splash src="res/screen/android/screen-hdpi-portrait.png"  gap:platform="android" gap:qualifier="hdpi" />
    <gap:splash src="res/screen/android/screen-xhdpi-portrait.png" gap:platform="android" gap:qualifier="xhdpi" />

</widget>

<?xml version="1.0" encoding="UTF-8" ?>
<widget id="com.belmiro.bubbleshooter" version="0.0.13" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bubble Shooter</name>
    <description>
        bubble shooter game
    </description>
    <author email="jeferson.belmiro@gmail.com" href="http://jefersonbelmiro.com.br">
        bubble shooter team
    </author>

    <content src="index.html" />

    <access origin="*" />

    <gap:plugin name="org.crosswalk.engine" version="1.3.0" />

    <!-- Define app icon for each platform. -->
    <icon src="src/res/icon.png" />
    <icon src="src/res/icon/android/icon-36-ldpi.png"   gap:platform="android"    gap:qualifier="ldpi" />
    <icon src="src/res/icon/android/icon-48-mdpi.png"   gap:platform="android"    gap:qualifier="mdpi" />
    <icon src="src/res/icon/android/icon-72-hdpi.png"   gap:platform="android"    gap:qualifier="hdpi" />
    <icon src="src/res/icon/android/icon-96-xhdpi.png"  gap:platform="android"    gap:qualifier="xhdpi" />
    <icon src="src/res/icon/blackberry/icon-80.png"     gap:platform="blackberry" />
    <icon src="src/res/icon/blackberry/icon-80.png"     gap:platform="blackberry" gap:state="hover"/>
    <icon src="src/res/icon/ios/icon-57.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="src/res/icon/ios/icon-72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="src/res/icon/ios/icon-57-2x.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="src/res/icon/ios/icon-72-2x.png"         gap:platform="ios"        width="144" height="144" />
    <icon src="src/res/icon/webos/icon-64.png"          gap:platform="webos" />
    <icon src="src/res/icon/windows-phone/icon-48.png"  gap:platform="winphone" />
    <icon src="src/res/icon/windows-phone/icon-173.png" gap:platform="winphone"   gap:role="background" />


    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <platform name="android">
        <preference name="orientation" value="portrait" />

        <icon src="src/res/icon/android/icon-36-ldpi.png"   density="ldpi" />
        <icon src="src/res/icon/android/icon-48-mdpi.png"   density="mdpi" />
        <icon src="src/res/icon/android/icon-72-hdpi.png"   density="hdpi" />
        <icon src="src/res/icon/android/icon-96-xhdpi.png"  density="xhdpi" />

        <splash src="src/res/screen/android/screen-ldpi-portrait.png"       density="port-ldpi" />
        <splash src="src/res/screen/android/screen-mdpi-portrait.png"       density="port-mdpi" />
        <splash src="src/res/screen/android/screen-hdpi-portrait.png"       density="port-hdpi" />
        <splash src="src/res/screen/android/screen-xhdpi-portrait.png"      density="port-xhdpi" />
    </platform>
</widget>
